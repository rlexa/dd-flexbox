{
  "_help": {
    "npm run packagr": "create npm package in dist",
    "npm login": "before publishing",
    "npm publish dist": "publish to npm"
  },
  "name": "dd-flexbox",
  "version": "7.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --prod",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "packagr": "ng-packagr -p ng-package.json",
    "_test": "Karma not working now beacuse for jest removed: @types/jasminewd2 @types/jasmine",
    "__test": "ng test",
    "___test": {
      "--ci": "CI server setting so jest will fail if no test snapshot found (instead of creating one)",
      "--runInBand": "CI servers usually run single-threaded so switch to runInBand (parallelization would slow it down)",
      "--logHeapUsage": "In case Jenkins fails due to OOM let's log it at least."
    },
    "test": "jest --ci --logHeapUsage",
    "test:watch": "jest --watchAll",
    "test:watch:single": "jest --watchAll --runInBand",
    "test:coverage": "jest --coverage",
    "_test:ci": {
      "--ci": "CI server setting so jest will fail if no test snapshot found (instead of creating one)",
      "--runInBand": "CI servers usually run single-threaded so switch to runInBand (parallelization would slow it down)",
      "--logHeapUsage": "In case Jenkins fails due to OOM let's log it at least."
    }
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/src/jest-setup.ts",
    "testURL": "http://localhost/",
    "modulePathIgnorePatterns": [
      "<rootDir>.DS_Store",
      "<rootDir>/src/assets/Thumbs.db",
      "<rootDir>/src/assets/sprites/Thumbs.db",
      "<rootDir>/.svn",
      "<rootDir>/.vscode",
      "<rootDir>/.sass-cache",
      "<rootDir>/coverage",
      "<rootDir>/dist",
      "<rootDir>/e2e",
      "<rootDir>/junit",
      "<rootDir>/node_modules",
      "<rootDir>/out-tsc",
      "<rootDir>/sass-binaries",
      "<rootDir>/tmp"
    ],
    "roots": [
      "<rootDir>/src/app"
    ]
  },
  "private": false,
  "peerDependencies": {
    "core-js": "^2.4.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.8.5",
    "@angular-devkit/schematics": "^7.3.10",
    "@angular/cli": "~7.3.9",
    "@angular/common": "^7.2.16",
    "@angular/compiler": "^7.2.16",
    "@angular/compiler-cli": "^7.2.16",
    "@angular/core": "^7.2.16",
    "@angular/language-service": "^7.2.16",
    "@angular/platform-browser": "^7.2.16",
    "@angular/platform-browser-dynamic": "^7.2.16",
    "@types/jasmine": "~2.8.3",
    "@types/jasminewd2": "~2.0.2",
    "@types/jest": "^22.2.2",
    "@types/node": "~6.0.60",
    "codelyzer": "^4.2.1",
    "core-js": "^2.4.1",
    "jasmine-core": "~2.8.0",
    "jasmine-spec-reporter": "~4.2.1",
    "jest": "^22.4.3",
    "jest-preset-angular": "^5.2.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-cli": "^1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ng-packagr": "^9.1.5",
    "protractor": "~5.1.2",
    "rxjs": "^6.5.4",
    "ts-node": "~4.1.0",
    "tslint": "~5.9.1",
    "typescript": "3.2.4",
    "zone.js": "^0.8.29"
  }
}
